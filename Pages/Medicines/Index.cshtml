@page
@model MedicineApplication.Pages_Medicines.IndexModel

@{
    ViewData["Title"] = "Medicine List";
}

<h1>Medicine List</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<form asp-page="./Index" method="get" class="mb-4">
    <div class="form-actions no-color">
        <div class="input-group">
            <input type="text" name="searchString" value="@Model.CurrentFilter" class="form-control" placeholder="Search by Name or Company" />
            <input type="hidden" name="sortOrder" value="@Model.CurrentSort" />
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" 
                   asp-route-sortOrder="@(Model.CurrentSort == "Name" ? "Name_desc" : "Name")"
                   asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Medicine[0].Name)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Company)
            </th>
            <th>
                <a asp-page="./Index" 
                   asp-route-sortOrder="@(Model.CurrentSort == "Price" ? "Price_desc" : "Price")"
                   asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Medicine[0].Price)
                </a>
            </th>
            <th>
                <a asp-page="./Index" 
                   asp-route-sortOrder="@(Model.CurrentSort == "ExpiryDate" ? "ExpiryDate_desc" : "ExpiryDate")"
                   asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Medicine[0].ExpiryDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Stock)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Medicine) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Company)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.ExpiryDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.MedicineId" class="btn btn-sm btn-primary">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.MedicineId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = Model.PageIndex <= 1 ? "disabled" : "";
    var nextDisabled = Model.PageIndex >= Model.TotalPages ? "disabled" : "";
}

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item @prevDisabled">
            <a asp-page="./Index"
               asp-route-pageIndex="@(Model.PageIndex - 1)"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-searchString="@Model.CurrentFilter"
               class="page-link">
                Previous
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a asp-page="./Index"
                   asp-route-pageIndex="@i"
                   asp-route-sortOrder="@Model.CurrentSort"
                   asp-route-searchString="@Model.CurrentFilter"
                   class="page-link">
                    @i
                </a>
            </li>
        }
        <li class="page-item @nextDisabled">
            <a asp-page="./Index"
               asp-route-pageIndex="@(Model.PageIndex + 1)"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-searchString="@Model.CurrentFilter"
               class="page-link">
                Next
            </a>
        </li>
    </ul>
</nav>